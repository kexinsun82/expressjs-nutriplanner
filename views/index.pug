extends common/layout

block content
  .container.mt-4
    .row.mb-4.justify-content-center
      .col-md-10
        h1.text-center Welcome to NutriPlanner
        p.text-center.mb-4 Track your meals and discover healthy recipes

    .row.justify-content-center
      // left section - search and random recipes
      .col-md-10
        .card.mb-4
          .card-body
            h5.card-title Search Food
            form(action="/food" method="GET")
              .input-group
                input.form-control(type="text" name="q" placeholder="Search for food items...")
                button.btn.btn-primary(type="submit") Search

        .card
          .card-body
            h5.card-title.mb-3 Explore Recipes
            #randomRecipes
              if randomRecipes && randomRecipes.length > 0
                .row
                  each recipe in randomRecipes
                    .col-md-4.mb-3
                      .card.h-100
                        if recipe.image
                          img.card-img-top(src=recipe.image alt=recipe.title)
                        .card-body
                          h6.card-title= recipe.title
                          p.card-text Ready in: #{recipe.readyInMinutes} minutes
                          a.btn.btn-sm.btn-outline-primary(href=`/recipe-details/${recipe.id}`) View Recipe
